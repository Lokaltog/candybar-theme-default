doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')
		title candybar default theme
		link(rel='stylesheet', href='static/css/main.css', type='text/css')

	body
		#candybar-bg
			#candybar
				.widget#widget_desktops
					.contents

				.widget.size-fill#widget_window_title
					.contents

				.widget.popup#widget_now_playing
					.contents
						.icon
						.time.popup-contents
							span.elapsed_time
							span.total_time
						.progress
							.bar.elapsed_percent
						.icon.status-icon
						.song.popup-contents
							span.artist
							span.title

				.widget#widget_volume
					.contents
						.icon
						.progress
							.bar.volume_percent

				.widget#widget_weather
					.contents
						.icon
						.temp

				.widget#widget_email_imap
					.contents
						.icon
						.unread

				.widget.popup#widget_external_ip
					.contents
						.icon
						.popup-contents
							.ip

				.widget#widget_mpris
					.contents
						.artist
						.title

				.widget.popup#widget_battery
					.contents
						.icon
						.percentage
						.popup-contents
							.time_left

				.widget#widget_datetime
					.contents
						.icon
						.date
						.time

	script(src='static/js/main.js')
